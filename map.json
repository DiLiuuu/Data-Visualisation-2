{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 800,
"config": {
    "background": "transparent"
},    "description": "Global Missing Migrant",
    "params": [
        {
            "name": "Cause_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Drowning",
                    "Harsh environmental conditions / lack of adequate shelter, food, water",
                    "Mixed or unknown",
                    "Sickness / lack of access to adequate healthcare",
                    "Violence",
                    "Accidental death",
                    "Vehicle accident / death linked to hazardous transport"
                ],
                "labels": [
                    "Show All",
                    "Drowning",
                    "Harsh environmental conditions / lack of adequate shelter, food, water",
                    "Mixed or unknown",
                    "Sickness / lack of access to adequate healthcare",
                    "Violence",
                    "Accidental death",
                    "Vehicle accident / death linked to hazardous transport"
                ],
                "name": "Cause of Death"
            }
        }
    ],
    "projection": {
        "type": "equalEarth",
        "center": [
            15,
            10
        ],
        "scale": 200
       
        },
    
    "layer": [
        {
            "data": {
                "url": "ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#181818",
                "stroke": "#202020"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/DiLiuuu/Data-Visualisation-2/main/Global%20Missing%20Migrants%20Dataset.csv"
            },
            "transform": [
                {
                    "filter": "Cause_selection == null || datum['Cause of Death'] == Cause_selection"
                }
            ],
            "mark": {
                "type": "circle",
                "filled": true
            },
            "encoding": {
                "longitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Total Number of Dead and Missing",
                    "type": "quantitative",
                    "title": "Number of Dead and Missing",
                   "scale": {
                    "type": "bin-ordinal",
                    "domain": [
                        1,
                        1100
                    ],
                    "range": [
                        15,
                        1100
                    ] 
                },
                "legend": {
                    "labelColor": "white",
                    "titleColor": "white",
                    "labelFontSize": 10, 
                    "titleFontSize": 12, 
                    "orient": "bottom"
                }
                },
                
                "opacity": {"value":0.3}
                ,
             "color": {
                "value": "orange"
            },
            
                "tooltip": [
                   {
                    "field": "Incident year",
                    "type": "quantitative",
                    "title": "Incident year"
                },
                {
                    "field": "Cause of Death",
                    "type": "nominal",
                    "title": "Cause of Death"
                },
                    {
                        "field": "Total Number of Dead and Missing",
                        "type": "quantitative",
                        "title": "Total Number of Dead and Missing"
                    },
                    {
                        "field": "Number of Survivors",
                        "type": "quantitative",
                        "title": "Number of Survivors"
                    },
                    {
                        "field": "Region of Incident-1",
                        "type": "nominal",
                        "title": "Region of Incident"
                    },
                    
                    {
                        "field": "Location of death",
                        "type": "nominal",
                        "title": "Location of death"
                    },
                    
                    {
                        "field": "Region of Origin",
                        "type": "nominal",
                        "title": "Region of Origin"
                    }

                ]
                
            }
        
}]
}
